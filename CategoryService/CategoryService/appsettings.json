{
  "ConnectionStrings": {
    "DatabaseContext": "Server=192.168.1.4;Database=MicroServicesProjem.CategoryDB;User Id=sa;Password=1;MultipleActiveResultSets=True;TrustServerCertificate=True;"

  },
  "CacheSettings": {
    "SlidingExpiration": 2
  },
  "RabbitMQ": {
    "Host": "rabbitmq"
  },
  "Auth": {
    "Authority": "http://keycloak:8080/realms/main", // Keycloak realm
    "Audience": "category-api" // Keycloak'taki clientId (CategoryService i√ßin)
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.Elasticsearch" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://elasticsearch:9200",
          "indexFormat": "dotnet-logs-{0:yyyy.MM.dd}",
          "autoRegisterTemplate": true
        }
      },
      {
        "Name": "RabbitMQ",
        "Args": {
          "hostnames": [ "rabbitmq" ],
          "queueName": "logs",
          "exchangeName": "",
          "durable": true
        }
      }
    ],
    "Properties": {
      "Application": "CategoryService"
    }
  },
  "SeriLogConfigurations": {
    "MsSqlConfiguration": {
      "ConnectionString": "Server=192.168.1.4;Database=MicroServicesProjem.CategoryDB;User Id=sa;Password=1;TrustServerCertificate=True;",
      "TableName": "Logs",
      "AutoCreateSqlTable": true
    }
  }
}
